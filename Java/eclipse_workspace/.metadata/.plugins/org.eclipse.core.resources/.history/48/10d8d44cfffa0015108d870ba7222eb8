import java.io.File;
import java.util.Map;
import java.util.TreeMap;
import java.util.TreeSet;

public class IndexManager {

	private String indexPath;
	private File index;
	private Map<String, TreeSet<File>> indexFromFile = new TreeMap<String, TreeSet<File>>();

	public Map<String, TreeSet<File>> getIndexFromFile() {
		return indexFromFile;
	}

	IndexManager(String pathToIndexDirectory) {
		index = new File(pathToIndexDirectory);
		if (!index.isDirectory()) {
			throw new IllegalArgumentException("Ordnerpfad verweist nicht auf einen Ordner!");
		}
		indexPath = index.getAbsolutePath();
		System.out.println(indexPath);
	}

	boolean loadIndex() {

		return false;
	}

}
