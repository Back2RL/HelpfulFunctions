package u1a04;

import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;

public class Format {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner file = null;
		try {
			File datei = new File(args[0]);
			file = new Scanner(datei);

			if (file.hasNextLine())
				file.nextLine(); // erste Zeile mit Spaltenbeschreibung
									// Ã¼berspringen
			while (file.hasNextLine()) {
				String line = file.nextLine();
				StringBuilder sentence = new StringBuilder();

				String[] tokens = line.split(";");

				sentence.append(tokens[0]);
				for (int i = 0; i < 13 - tokens[0].length(); i++) {
					sentence.append(" ");
				}
				sentence.append(" ist geboren in ");

				sentence.append(tokens[1]);
				for (int i = 0; i < 3 - tokens[1].length(); i++) {
					sentence.append(" ");
				}

				sentence.append(" und liebt ");
				sentence.append(tokens[2]);
				for (int i = 0; i < 9 - tokens[2].length(); i++) {
					sentence.append(" ");
				}

				sentence.append(" und ");

				String[] numbers = tokens[3].split(",");
				for (int i = 0; i < 4 - numbers[0].length(); i++) {
					sentence.append("0");
				}
				sentence.append(numbers[0]);
				sentence.append(",");

				if (numbers.length == 2) {
					for (int i = 0; i < 2 - numbers[1].length(); i++) {
						sentence.append("0");
					}
				} else {
					sentence.append("00");
				}

				System.out.println(sentence);

			}

		} catch (ArrayIndexOutOfBoundsException e) {
			e.printStackTrace();
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		} finally {
			if (file != null)
				file.close();
		}

	}

}
