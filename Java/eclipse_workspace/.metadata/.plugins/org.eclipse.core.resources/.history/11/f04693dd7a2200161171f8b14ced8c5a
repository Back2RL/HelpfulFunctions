package Aufgabe_8;

public class TreeNode {
	private int data;
	private TreeNode parent;
	private TreeNode leftChild;
	private TreeNode rightChild;
	private byte linkInformation = 2;

	public boolean isLeftLink() {
		int mask = 1 << 2;
		return (linkInformation & mask) == mask;
	}
	public void setLeftLink(boolean isLink){
		if(isLink){
		  linkInformation |= (1 << 2);		
		}
		else {
			linkInformation&= ~(1 << 2);		
		}		
	}
	public void setRightLink(boolean isLink){
		if(isLink){
		  linkInformation |= (1 << 1);		
		}
		else {
			linkInformation&= ~(1 << 1);		
		}		
	}

	public boolean isRightLink() {
		int mask = 1 << 1;
		return (linkInformation & mask) == mask;
	}

	public TreeNode(TreeNode parent, int data) {
		setParent(parent);
		setData(data);
	}

	public TreeNode getParent() {
		return parent;
	}

	public void setParent(TreeNode parent) {
		this.parent = parent;
	}

	public int getData() {
		return data;
	}

	public void setData(int data) {
		this.data = data;
	}

	public TreeNode getLeftChild() {
		return leftChild;
	}

	public void setLeftChild(TreeNode leftChild) {
		this.leftChild = leftChild;
	}

	public TreeNode getRightChild() {
		return rightChild;
	}

	public void setRightChild(TreeNode rightChild) {
		this.rightChild = rightChild;
	}

}
