package u1a04;

import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;

public class Format {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner file = null;
		try {
			File datei = new File(args[0]);
			file = new Scanner(datei);

			if (file.hasNextLine())
				file.nextLine(); // erste Zeile mit Spaltenbeschreibung
									// Ã¼berspringen
			while (file.hasNextLine()) {
				String line = file.nextLine();
				StringBuilder sentence = new StringBuilder();

				int commaIndex = line.indexOf(";");
				sentence.append(line.substring(0, commaIndex));
				line = line.substring(commaIndex + 1);

				for (int i = 0; i < 13 - commaIndex; i++) {
					sentence.append(" ");
				}
				sentence.append(" ist geboren in ");

				commaIndex = line.indexOf(";");
				sentence.append(line.substring(0, commaIndex));
				line = line.substring(commaIndex + 1);

				for (int i = 0; i < 3 - commaIndex; i++) {
					sentence.append(" ");
				}

				sentence.append(" und liebt ");

				commaIndex = line.indexOf(";");
				sentence.append(line.substring(0, commaIndex));
				line = line.substring(commaIndex + 1);

				for (int i = 0; i < 9 - commaIndex; i++) {
					sentence.append(" ");
				}

				sentence.append(" und ");

				sentence.append(line.format("$04d"));

				System.out.println(sentence);

			}

		} catch (ArrayIndexOutOfBoundsException e) {
			e.printStackTrace();
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		} finally {
			if (file != null)
				file.close();
		}

	}

}
